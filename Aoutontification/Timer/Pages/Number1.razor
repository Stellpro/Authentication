@page "/Number1"
@using MatBlazor
@inherits CounterViewModel
<h3>Number1</h3>
<ol>
    <li>
        <MatTextField Label="What's your name?" @bind-Value="@name"></MatTextField>
    </li>
    <li>
        <MatButton OnClick="@OpenDialog" Raised="true">Pick one</MatButton>
    </li>
    @if (animal != null)
    {
        <li>You chose: @animal</li>
    }
</ol>
<MatDialog @bind-IsOpen="@dialogIsOpen">
    <MatDialogTitle>timer</MatDialogTitle>
    <MatDialogContent>
        @Clock.Minit : @Clock.Secund
    </MatDialogContent>
    <MatDialogActions>
        <button class="btn-success" @onclick="@(e=>Timer(Clock))">start</button>
        <button class="btn-success" @onclick="@(e=>paused())">paused</button>
        <button class="btn-success" @onclick="@(e=>resturt())">restart</button>
    </MatDialogActions>
</MatDialog>

@code
        {
    bool dialogIsOpen = false;
    string name = null;
    string animal = null;
    string dialogAnimal = null;

    void OpenDialog()
    {
        dialogAnimal = null;
        dialogIsOpen = true;
    }

    void OkClick()
    {
        animal = dialogAnimal;
        dialogIsOpen = false;
    }

}